.zan-tab {
    border-bottom: 1px solid #e5e5e5;
}
.refresh-page{
    line-height: 30px;
    text-align: center;
    font-size: 12px;
    color: #909399;
}

.content-view {
    position: fixed;
    top: 76px;
    bottom: 0
}
.content-view.notice{
    top: 112px;
}

.pro-item {
    background: #fff;
    border-bottom: 1px solid #e5e5e5;
}

.pro-item__lt {
    padding: 20px;
}

.pro-item__lt image {
    border-radius: 4px;
    width: 60px;
    height: 60px;
}

.pro-item__rt .pro-item__title {
    line-height: 30px;
    font-size: 14px;
    color: #303133;
}

.pro-item__rt .pro-item__desc {
    padding-right: 20px;
    font-size: 12px;
    word-break: break-all;
    color: #606266;
}

.pro-item__btn-line {
    margin: 10px 0;
}

.pro-item__price {
    text-align: left;
    font-size: 14px;
    color: #E6A23C;
}

.pro-item__okbtn {
    text-align: right;
    padding-right: 20px;
}

.load-more {
    padding: 10px 0;
    border-bottom: 1px solid #e5e5e5;
    background: #fff;
    text-align: center;
    font-size: 12px;
    color: #C0C4CC
}

.no-data{
    background: #fff;
    padding: 50px;
    text-align: center;
    font-size: 12px;
    color: #C0C4CC;
}

.popup-example--bottom .zan-popup__container {
    left: 0;
    right: 0;
}
.popup-example--bottom .zan-form__title{
    width: 100px;
}

/* 文字提示样式 */
.text-popup-con{
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    font-size: 14px;
    line-height: 20px;
    color: #303133;

    word-break: break-all;
    padding: 10px 15px;
    text-indent: 2em;
    text-align: justify;

}
.text-popup-cancel{
    position: absolute;
    bottom: -50px;
    left: 50%;
    transform: translate3d(-50%,0,0);
}

.zan-popup__container--text{
    width: 80%;
    height: 70%;
    border-radius: 5px;
}


/* 填写购买数量的上面部分 */
.buynum-top{
    position: relative;
    padding: 10px 15px;
    padding-left: 100px;
}
.buynum-top__imgbox{
    position: absolute;
    width: 80px;
    height: 80px;
    overflow: hidden;
    left: 10px;
    bottom: 0px;
    background-color: #fff;
    box-shadow:0px 0px 3px #DCDFE6;

}
.buynum-top__imgbox image{
    width: 80px;
    height: 80px;
}
.buynum-top__name{
    font-size: 14px;
    padding-bottom: 10px;
    color: #303133;
}
.buynum-top__price{
    font-size: 14px;
    color: #F56C6C;
}