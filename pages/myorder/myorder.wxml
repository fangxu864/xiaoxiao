<view class="container">

    <view class="zan-panel" wx:for="{{orderList}}" wx:for-item="item">
        <view class="order-item">
            <view class="zan-row order-item__ordernum-line">
                <view class="zan-col zan-col-16 color-warn">订单号：{{item.order}}</view>
                <view class="zan-col zan-col-8 order-item__time">{{item.time}}</view>
            </view>
            
            <view class="zan-row">
                <view class="zan-col zan-col-24"><text class="color-main">购买：</text>{{item.name}}</view>
            </view>
            <view class="zan-row">
                <view class="zan-col zan-col-12 "><text class="color-main">单价：</text>￥{{item.price}}/kg</view>
                <view class="zan-col zan-col-12"><text class="color-main">数量：</text>{{item.num}}kg</view>
            </view>
            <view class="zan-row">
                <view class="zan-col zan-col-6 color-main">收货人地址：</view>
                <view class="zan-col zan-col-18">{{item.address}}</view>
            </view>
            
            <view class="zan-row">
                <view class="zan-col zan-col-6 color-main">收货人手机：</view>
                <view class="zan-col zan-col-18">{{item.mobile}}</view>
            </view>
        
        </view>
    </view>



</view>