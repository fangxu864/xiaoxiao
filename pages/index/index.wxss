/* 信息列表 */

.xxs-info {
    display: flex;
    padding: 15px;
}

.xxs-info__lt {
    flex-grow: 0;
    padding-right: 10px;
    padding-top: 8px;
}

.xxs-info__userimg {
    width: 40px;
    height: 40px;
    border-radius: 40px;
    overflow: hidden;
}

.xxs-info__nameline {
    height: 30px;
    line-height: 30px;
}

.xxs-info__rt {
    flex-grow: 1;
}

.xxs-info__content {
    padding-right: 10px;
    text-align:justify;    
}

.xxs-info__imgbox {
    display: flex;
    flex-wrap: wrap;
    margin-top: 10px;
    justify-content: space-between;
}

.xxs-info__imgbox image {
    position: absolute;
    width: 100%;
    height: 100%;
}

.xxs-info__imgbox .item {
    position: relative;
    width: 31%;
    /* background-color: #008b57; */
    overflow: hidden;
}

.xxs-info__imgbox .item::after {
    content: '';
    display: block;
    margin-top: 100%;
}

.xxs-info__timebtnline{
    height: 30px;
    line-height: 30px;
}

.xxs-info__coment-box{
    background-color: #fafafa;
    padding: 10px;
    line-height: 20px;
}