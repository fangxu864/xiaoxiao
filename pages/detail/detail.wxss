.userimg-line{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10px;
}

.userimg-line .lt{
    display: flex;
    align-items: center;
}
.userimg-line .lt .user-img {
    width: 40px;
    height: 40px;
    border-radius: 40px;
    overflow: hidden;
}

.adress-line{
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height:35px;    
}

.content-text{
    text-align: justify;
    padding-top: 10px;
    line-height: 20px;
}

.img-box{
    margin-top: 10px;
}
.img-box .list-img{
    width: 100%;
    margin-top: 5px;
}


.comment-line{
    display: flex;
    justify-content: space-between;
    align-items: center;
    
}

.coment-box{
    background-color: #fafafa;
    padding: 10px;
    line-height: 20px;
    margin: 10px 15px;
}